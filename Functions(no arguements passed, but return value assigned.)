#include <stdio.h>

int addNumbers();         // function prototype

int main()
{    
    int result = addNumbers();
	  printf("the result is %d", result);
    return 0;
}


int addNumbers()         // function definition
{     
    int n1,n2,sum;
    printf("Enters two numbers: ");
    scanf("%d %d",&n1,&n2);
    sum = n1+n2;
    
    return sum;   //return n1+n2
                  // return statement
}
